procedure DebugTD();
var
  image: TImage;
begin
  image := Target.GetImage(Target.Bounds);
  image.DrawTPA(GameState.GetTormentedDemonMSPoints);
  image.Show;
  image.Free;
end;

begin
  OverheadFinder.Setup;
  Map.Setup(Chunk([63,69,64,68], 0)); //TD lair

  GameState.Start;

  while True do
  begin
    DebugTD;
    Sleep(50);
  end;
end.
